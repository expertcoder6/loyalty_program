
<div class="card" style="margin-top: 50px;">
	<div class="card-heading" >
		<h1 style= "text-align: center;">Payment page</h1>
	</div>
	<div class="card-body">
		<%= form_for Transaction.new do |f| %>
			<div>
				<div class="form-group">
					<%= f.label :amount %>
					<%= f.text_field :amount,value: @product.price.to_i,class: "form-control" %>
				</div>

				<%= f.hidden_field :product_id, value: @product.id %>
				<%= f.hidden_field  :store_id, value: @store.id %>
				<%= f.hidden_field  :user_id, value: current_user.id %>

				<%= f.submit "pay",class: "btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
